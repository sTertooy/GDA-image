FROM ghcr.io/stertooy/gda-image:4.9-slim as build

ENV GAP_HOME=/opt/gap

# Prerequisites
RUN apt-get update && \
    apt-get install --yes --no-install-recommends   \
        automake       `# NormalizInterface`        \
        libboost-dev   `# NormalizInterface`        \
        polymake       `# polymaking`            && \
    rm -rf /var/lib/apt/lists/*

# Download GAP packages
RUN cd ${GAP_HOME} && \
    rm -rf pkg && \
    make bootstrap-pkg-full && \
    rm packages*.tar.gz && \
    cd ${GAP_HOME}/pkg && \
    rm -rf                                     \
        itc-1.5             `# dependencies`   \
        linboxing           `# unusable`       \
        PolymakeInterface   `# unusable`       \
        qaos-1.6            `# unusable`       \
        xgap-4.27           `# unusable`      

# Build GAP packages
RUN cd ${GAP_HOME}/pkg && \
    ../bin/BuildPackages.sh

# Squash
FROM scratch
COPY --from=build / /

CMD ["bash"]
